<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="group.frontend.changeSeatController" prefWidth="400" prefHeight="300">
    <VBox spacing="20" alignment="CENTER" prefWidth="400" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Change Seat Selection" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Seat Class:"/>
            <ComboBox fx:id="classComboBox" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Available Seats:"/>
            <ComboBox fx:id="seatComboBox" prefWidth="200"/>
        </HBox>

        <HBox spacing="20" alignment="CENTER">
            <Button text="Confirm" fx:id="confirmButton" onAction="#confirmChanges" />
            <Button text="Cancel" fx:id="cancelButton" onAction="#back" />
        </HBox>
    </VBox>
</AnchorPane>
