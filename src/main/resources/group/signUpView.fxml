<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group.frontend.signUpController">
   <children>
      <Label layoutY="-1.0" text="FlyDreamAir Customer Management System">
         <font>
            <Font size="16.0" />
         </font>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </Label>
      <Button fx:id="exitButton" layoutX="710.0" mnemonicParsing="false" onAction="#exitProgram" prefHeight="40.0" prefWidth="90.0" style="-fx-background-color: #ff5656; -fx-background-radius: 0;" text="Exit" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Label layoutX="80.0" layoutY="119.0" text="Sign Up">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="80.0" layoutY="159.0" text="Name:" underline="true">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="bookingDisplay" layoutX="80.0" layoutY="196.0">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="backButton" layoutY="560.0" mnemonicParsing="false" onAction="#back" prefHeight="40.0" prefWidth="90.0" style="-fx-background-color: #114680; -fx-background-radius: 0;" text="Back" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <TextField fx:id="fNameInput" layoutX="80.0" layoutY="190.0" prefHeight="40.0" prefWidth="313.0" promptText="First Name">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="lNameInput" layoutX="407.0" layoutY="190.0" prefHeight="40.0" prefWidth="313.0" promptText="Last Name">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <Label layoutX="80.0" layoutY="240.0" text="Email:" underline="true">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="emailInput" layoutX="80.0" layoutY="271.0" prefHeight="40.0" prefWidth="640.0" promptText="example@gmail.com">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <Label layoutX="80.0" layoutY="321.0" text="Password:" underline="true">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordInput" layoutX="80.0" layoutY="352.0" prefHeight="40.0" prefWidth="640.0" promptText="Enter your password">
         <font>
            <Font size="18.0" />
         </font>
      </PasswordField>
      <Button fx:id="signUpButton" layoutX="514.0" layoutY="460.0" mnemonicParsing="false" onAction="#signUp" prefHeight="40.0" prefWidth="205.0" style="-fx-background-color: #1f8bff;" text="Sign Up" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
