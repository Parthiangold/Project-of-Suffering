<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group.frontend.menuController">
   <children>
      <Label layoutY="-1.0" text="FlyDreamAir Customer Management System">
         <font>
            <Font size="16.0" />
         </font>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </Label>
      <Label layoutX="80.0" layoutY="162.0" text="Search Flights">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="departureInput" layoutX="80.0" layoutY="205.0" prefHeight="40.0" prefWidth="205.0" promptText="Enter Departure Airport">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <TextField fx:id="arrivalInput" layoutX="297.0" layoutY="205.0" prefHeight="40.0" prefWidth="205.0" promptText="Enter Arrival Airport">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <DatePicker fx:id="dateInput" layoutX="515.0" layoutY="205.0" prefHeight="40.0" prefWidth="205.0" promptText="Enter Departure Date" style="-fx-font-size: 16;" />
      <TextField fx:id="adultInput" layoutX="80.0" layoutY="265.0" prefHeight="40.0" prefWidth="205.0" promptText="Enter # of Adults">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <TextField fx:id="childInput" layoutX="297.0" layoutY="265.0" prefHeight="40.0" prefWidth="205.0" promptText="Enter # of Children">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <Button fx:id="searchButton" layoutX="515.0" layoutY="265.0" mnemonicParsing="false" onAction="#inputCheck" prefHeight="40.0" prefWidth="205.0" style="-fx-background-color: #1f8bff;" text="Search Flights" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Label layoutX="80.0" layoutY="355.0" text="Manage Bookings">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="bookingInput" layoutX="80.0" layoutY="398.0" prefHeight="40.0" prefWidth="205.0" promptText="Enter Booking ID">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <Button fx:id="manageButton" layoutX="297.0" layoutY="398.0" mnemonicParsing="false" onAction="#searchBooking" prefHeight="40.0" prefWidth="205.0" style="-fx-background-color: #1f8bff;" text="Manage Booking" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="logoutButton" layoutX="620.0" mnemonicParsing="false" onAction="#logout" prefHeight="40.0" prefWidth="90.0" style="-fx-background-color: #114680; -fx-background-radius: 0;" text="Logout" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="710.0" mnemonicParsing="false" onAction="#exitProgram" prefHeight="40.0" prefWidth="90.0" style="-fx-background-color: #ff5656; -fx-background-radius: 0;" text="Exit" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Label fx:id="errorMessageSearch" layoutX="80.0" layoutY="134.0" textFill="RED">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="errorMessageManage" layoutX="80.0" layoutY="327.0" textFill="RED">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
